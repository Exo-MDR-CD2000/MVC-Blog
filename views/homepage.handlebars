{{#each posts}}
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">{{title}}</h5>
      <p class="card-text">{{content}}</p>
      <p class="card-text"><small class="text-muted">Posted by {{user.username}} on {{formatDate created_at}}</small></p>
    </div>
    <ul class="list-group list-group-flush">
      {{#each comments}}
        <li class="list-group-item">
          <p>{{text}}</p>
          <p><small class="text-muted">Commented by {{user.username}} on {{formatDate created_at}}</small></p>
        </li>
      {{/each}}
      <li class="list-group-item">
        <form id="comment-form" data-post-id="{{id}}">
          <div class="form-group">
            <label for="comment-text">Add a comment:</label>
            <textarea class="form-control" id="comment-text" name="text" rows="3"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </li>
    </ul>
  </div>
{{/each}}

<script src="/js/comments.js"></script>