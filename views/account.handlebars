{{!-- HTML code to provide users access to their account and to create a new post --}}
<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

{{!-- HTML code to create a new post --}}
<div class="row">
  <div class="col-md-6">
    <form id="new-post-form">
      <div class="form-group">
        <label for="post-title">Title</label>
        <input type="text" class="form-control" id="post-title" name="title" required>
      </div>
      <div class="form-group">
        <label for="post-content">Content</label>
        <textarea class="form-control" id="post-content" name="content" rows="3" required></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Create Post</button>
    </form>
  </div>
</div>

{{!-- HTML code to display existing posts --}}
<div class="row">
  <div class="col-md-6">
    <h3>Your Posts</h3>
    <ul class="list-group">
      {{#each posts}}
        <li class="list-group-item">
          <h5>{{title}}</h5>
          <p>{{content}}</p>
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-secondary edit-post" data-post-id="{{id}}">Edit</button>
            <button type="button" class="btn btn-danger delete-post" data-post-id="{{id}}">Delete</button>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
</div>

<script src="/js/account.js"></script>